<div id="rightpanel" class="col-xs-12 col-sm-2 col-md-2 col-lg-2 col-sm-offset-0 col-md-offset-0 col-lg-offset-0 col-sm-push-7 col-md-push-8 col-lg-push-8">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <% unless @services.nil? %>
        <% unless @services.empty? && @services.blank? %>
          <h2><%= link_to 'Services', all_services_path, class: 'services_link' %></h2>
        <% end %>

        <div id="servicepanel">
          <%= render @services %>
        </div>
      <% end %>
    </div>
  </div>
</div>